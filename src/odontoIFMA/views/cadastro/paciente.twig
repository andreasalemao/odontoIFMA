         </div>

          <div class="form-group">
            <label for="raca" class="col-sm-2 control-label">Ra√ßa </label>

                <div class="col-sm-4">
                    <input type="text" class="form-control uppercase" name="raca"
                           id="raca" placeholder="Pra que tem esse campo" value="">
                </div>
         </div>

         <div class="form-group">
            <label for="matricula" class="col-sm-2 control-label">Matricula </label>

                <div class="col-sm-4">
                    <input type="text" class="form-control uppercase" name="matricula"
                           id="matricula" placeholder="Matricula" value="">
                </div>
         </div>

          <div class="form-group">
            <label for="campus" class="col-sm-2 control-label">Campus </label>

                <div class="col-sm-4">
                    <select class="form-control uppercase" name="nome" id="campus_id">
                      <option value="nome">Monte Castelo</option>
                      <option value="nome">Ze Doca</option>
                      <option value="nome">Maracana</option>                      
                    </select>  
                </div>
         </div>

        <input type="hidden" id="id" name="id">

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-8">
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-ok"></span> Salvar
                </button>
                <a class="btn btn-default" href="/"><i
                            class="glyphicon glyphicon-remove"></i> Cancelar</a>
            </div>
        </div>

    </form>

{% endblock %}