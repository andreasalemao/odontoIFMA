                  </li>
              </ul>
          </li>

          <li>
              <a href="/logout"><i class="fa fa-fw fa-power-off"></i>Sair</a>
          </li>


      </ul>
    </div>

{% endblock %}

{% block header %}
    {% set pgAtual = 'Cadastro de tipo de operador' %}
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-20">
            {% for item in navigation_bar %}
                {% if item[0] == active_page %}
                {% endif %}
            {% endfor %}
            <ol class="breadcrumb">
                <li class="active">
                    {% for item in navigation_bar %}
                        {% if item[0] == active_page %}
                            <i class="{{ item[1] }}"></i> {{ item[2] }}
                        {% endif %}
                    {% endfor %}
                </li>
            </ol>
        </div>
    </div>
{% endblock %}
