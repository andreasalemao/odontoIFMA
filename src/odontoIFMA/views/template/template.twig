{% extends 'template/templateSemMenu.twig' %}

{#[Nome da rota, ícone, texto de exibição]#}
{% set navigation_bar = [
['home','fa fa-fw fa-home', 'Home'],
['cadTipoOperador' ,'fa fa-fw fa-edit', 'Cadastro Tipo Operador'],
['cadTipoPaciente' ,'fa fa-fw fa-edit', 'Cadastro Paciente'],
['cadTipoCampus' ,'fa fa-fw fa-edit', 'Cadastro Campus'],
['cadOperador' ,'fa fa-fw fa-edit', 'Cadastro Operador'],
['cadAnamnese' ,'fa fa-fw fa-edit', 'Anamnese']
] %}
{% set active_page = active_page|default('home') %}

{% block menu %}
    <!-- Top Menu Items -->
    <ul class="nav navbar-right top-nav">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <b
                        class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>
                    <a href="#"><i class="fa fa-fw fa-user"></i> Profile</a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-fw fa-envelope"></i> Inbox</a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-fw fa-gear"></i> Settings</a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="/logout"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                </li>
            </ul>
        </li>
    </ul>
    <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
    <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav side-nav">
            {% for item in navigation_bar %}
                <li{% if item[0] == active_page %} class="active"{% endif %}>
                    <a href="{{ app.url_generator.generate(item[0]) }}"><i class="{{ item[1] }}"></i> {{ item[2] }}
                    </a></li>
            {% endfor %}
        </ul>
    </div>

{% endblock %}

{% block header %}
    {% set pgAtual = 'Cadastro de tipo de operador' %}
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            {% for item in navigation_bar %}
                {% if item[0] == active_page %}
                    <h1 class="page-header">
                        {{ item[2] }}
                    </h1>
                {% endif %}
            {% endfor %}
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i> <a href="/home">Home</a>
                </li>
                <li class="active">
                    {% for item in navigation_bar %}
                        {% if item[0] == active_page %}
                            <i class="{{ item[1] }}"></i> {{ item[2] }}
                        {% endif %}
                    {% endfor %}
                </li>
            </ol>
        </div>
    </div>
{% endblock %}