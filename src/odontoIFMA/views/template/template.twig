        <div class="col-lg-12">
            {% for item in navigation_bar %}
                {% if item[0] == active_page %}
                    <h1 class="page-header">
                        {{ item[2] }}
                    </h1>
                {% endif %}
            {% endfor %}
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i> <a href="/home">Home</a>
                </li>
                <li class="active">
                    {% for item in navigation_bar %}
                        {% if item[0] == active_page %}
                            <i class="{{ item[1] }}"></i> {{ item[2] }}
                        {% endif %}
                    {% endfor %}
                </li>
            </ol>
        </div>
    </div>
{% endblock %}